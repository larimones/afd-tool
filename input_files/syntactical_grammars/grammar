programa -> program id ; begin corpo end .
corpo -> declaracao 
corpo -> atribuicao 
corpo ->if 
corpo ->laco 
corpo -> ''
declaracao -> tipo id ;
tipo -> integer 
tipo -> decimal 
tipo -> bool 
tipo -> string
atribuicao -> id := termo 
atribuicao -> id := expressao
termo -> constante 
termo -> id
if -> if ( condicao ) then bloco  else bloco
bloco -> begin corpo end ;
condicao -> termo comparador termo
expressao -> termo operacao termo
operacao -> + 
operacao -> - 
operacao -> * 
operacao -> / 
operacao -> %
comparador -> = 
comparador -> != 
comparador -> > 
comparador -> <
laco -> for 
laco -> repeat 
laco -> while
for -> for ( atribuicao ; condicao ; atribuicao ) bloco
repeat -> repeat bloco until ( condicao ) ;
while -> while ( condicao ) bloco
