<programa> ::= program <id> ; begin <corpo> end .
<corpo> ::= <declaracao> | <atribuicao> | <if> | <laco> | 3
<declaracao> ::= <tipo> <id> ;
<tipo> ::= integer | decimal | bool | string
<atribuicao> ::= <id> := <termo> | id := <expressao>
<termo> ::= <constante> | <id>
<constante> ::= <integer_constante> | <decimal_constante> | <string_constante> | <bool_constante>
<id> ::= <integer_id> | <decimal_id> | <string_id> | <bool_id>
<if> ::= if ( <condicao> ) then <bloco>  else <bloco>
<bloco> ::= begin <corpo> end ;
<condicao> ::= <termo> <comparador> <termo>
<expressao> ::= <termo> <operacao> <termo>
<operacao> ::= + | - | * | / | % |
<comparador> ::= = | != | > | < | >= | <=
<laco> ::= <for> | <repeat> | <while>
<for> ::= for ( <atribuicao> ; <condicao> ; <atribuicao> ) <bloco>
<repeat> ::= repeat <bloco> until ( <condicao> ) ;
<while> ::= while ( <condicao> ) <bloco>